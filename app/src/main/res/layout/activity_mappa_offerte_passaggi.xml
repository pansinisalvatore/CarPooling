<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MappaOffertePassaggiActivity">

    <fragment
        android:id="@+id/mapOfferte"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/accetta"
        android:layout_width="188dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_shape_normal"
        android:text="@string/accetta"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="456dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/rifiuta"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_shape_normal"
        android:text="@string/rifiuta"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="456dp" />

</RelativeLayout>