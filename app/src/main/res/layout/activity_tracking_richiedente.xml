<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textLayout"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textVacand"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trackingRichiedenteText"
            android:text="@string/trackingRichiedenteText"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_below="@+id/textVacand">
        </TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trackingRichiedenteText"
            android:id="@+id/buttonTrackingRichiedente"
            android:onClick="finitoRichiedente"/>
    </RelativeLayout>


</LinearLayout>