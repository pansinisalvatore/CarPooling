<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TrackingFragment"
    android:id="@+id/TrackingFragmentRichiesta"
    android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textLayout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textVacand"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewtRiceverText"
                android:text="@string/riceviTrackingText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_below="@+id/textVacand">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textVacand2"
                android:layout_below="@id/textViewtRiceverText"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datiRiepilogo"
                android:id="@+id/dataSummary"
                android:layout_below="@id/textVacand2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textVacand3"
                android:layout_below="@id/dataSummary"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/cognomeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/CognomeCittadino"
                android:visibility="visible" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cognomeOfferente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"
                android:editable="false"
                android:inputType="text"
                android:maxLines="1"
                android:theme="@style/MyEditText"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nomeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Nome"
                android:textSize="18sp"
                android:visibility="visible" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/nomeOfferente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"
                android:editable="false"
                android:inputType="text"
                android:maxLines="1"
                android:theme="@style/MyEditText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/telefonoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Telefono"
                android:textSize="15sp"
                android:visibility="visible" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/telefonoOfferente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"
                android:editable="false"
                android:inputType="text"
                android:maxLines="1"
                android:theme="@style/MyEditText"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/autoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Auto"
                android:textSize="18sp"
                android:visibility="visible" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/autoOfferente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"
                android:editable="false"
                android:inputType="text"
                android:maxLines="1"
                android:theme="@style/MyEditText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Labelvuota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTrackingRichiesta"
                android:hint="@string/startTracking" />

        </LinearLayout>






</LinearLayout>