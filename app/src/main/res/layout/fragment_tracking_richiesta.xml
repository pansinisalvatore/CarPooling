<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.TrackingFragment"
    android:id="@+id/TrackingFragmentRichiesta"
    android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textLayout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewtRiceverText"
                android:text="@string/riceviTrackingText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_below="@+id/textVacand"
                android:theme="@style/MyEditText">
            </TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datiRiepilogo"
                android:id="@+id/dataSummary"
                android:theme="@style/MyEditText"
                android:layout_below="@id/textVacand"/>



        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cognomeLabel"
            android:hint="@string/CognomeCittadino"
            android:theme="@style/MyEditText">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cognomeOfferente"
                android:inputType="text"
                android:maxLines="1"

                android:theme="@style/MyEditText"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nomeLabel"
            android:hint="@string/Nome"
            android:theme="@style/MyEditText">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomeOfferente"
                android:inputType="text"
                android:maxLines="1"

                android:theme="@style/MyEditText"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telefonoLabel"
            android:hint="@string/Telefono"
            android:theme="@style/MyEditText">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/telefonoOfferente"
                android:inputType="text"
                android:maxLines="1"

                android:theme="@style/MyEditText"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/autoLabel"
            android:hint="@string/Auto"
            android:theme="@style/MyEditText">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/autoOfferente"
                android:inputType="text"
                android:maxLines="1"

                android:theme="@style/MyEditText"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTrackingRichiesta"
                android:text="@string/startTracking"
                android:layout_gravity="center"
                android:textColor="@color/etichettabottoni"
                android:background="@drawable/button_shape_normal"
                android:backgroundTint="@color/tint_botton"/>

        </LinearLayout>






</LinearLayout>