<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OffriPassaggi">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtTipoPassaggio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viaggio"
            android:textSize="18sp"
            android:theme="@style/MyEditText"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <RadioGroup
            android:id="@+id/groupTypePassage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:theme="@style/MyEditText"
            >


                <RadioButton
                    android:id="@+id/Home-Work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/casa_lavoro"
                    android:theme="@style/MyEditText"
                    />

                <RadioButton
                    android:id="@+id/Work-Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lavoro_casa"
                    android:theme="@style/MyEditText"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0">
        <EditText
            android:id="@+id/edtData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:text="@string/ImpostaData"
            android:textAlignment="center"
            android:theme="@style/MyEditText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edtOra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"
            android:text="@string/ImpostaOra"
            android:textAlignment="center"
            android:theme="@style/MyEditText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView

            android:id="@+id/txtAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Auto"
            android:textSize="18sp"
            android:visibility="visible"
            android:theme="@style/MyEditText"/>

        <EditText
            android:id="@+id/edtInserisciAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:theme="@style/MyEditText"/>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

    <TextView
        android:id="@+id/txtPostiDisponibili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/PostiDisponibili"
        android:textSize="18sp"
        android:visibility="visible"
        android:theme="@style/MyEditText"
        />

        <Spinner
            android:id="@+id/spnPosti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:theme="@style/MyEditText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtDomanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Domanda"
            android:textSize="18sp"
            android:theme="@style/MyEditText"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:theme="@style/MyEditText">

            <RadioButton
                android:id="@+id/YesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Si"
                android:theme="@style/MyEditText"/>

            <RadioButton
                android:id="@+id/NoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/No"
                android:theme="@style/MyEditText"/>

        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Conferma"
            android:background="@drawable/button_shape_normal"
            android:backgroundTint="@color/tint_color"/>

    </RelativeLayout>




</LinearLayout>
