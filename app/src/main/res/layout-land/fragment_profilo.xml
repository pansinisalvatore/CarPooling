<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Fragment.ProfiloFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/tint_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView

                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/account2"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome Cognome(Prendere da database)"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account3"/>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="start"
                    android:text="Codice Fiscale(Prendere da db)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView

                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/houzz"/>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="start"
                    android:text="Azienda(Prendere da db)"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Contatti"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:textStyle="italic"
                android:textColor="@color/colore_testo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email"
                android:textStyle="italic"/>


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prendere email da db" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NumeroTelefonico"
                android:textStyle="italic"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prendere dal db il numero di telefono"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Informazioni"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:textStyle="italic"
                android:textColor="@color/colore_testo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Residenza"
                android:textStyle="italic"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prendere l'indirizzo dal database"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Impostazioni"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:textStyle="italic"
                android:textColor="@color/colore_testo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Password"
                android:textStyle="italic"/>
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prendere la pass dal db"
                android:inputType="textPassword">
            </android.support.design.widget.TextInputEditText>

            <Button
                android:id="@+id/confermaModifiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Conferma"
                android:background="@drawable/button_shape_normal"
                android:backgroundTint="@color/tint_botton"
                android:textColor="@color/etichettabottoni"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>